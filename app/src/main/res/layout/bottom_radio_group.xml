<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomRadioGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#11000000"
    android:orientation="horizontal"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    tools:showIn="@layout/activity_main">

    <RadioButton
        android:id="@+id/videoRadioBtn"
        style="@style/BottomRadioButton"
        android:drawableTop="@drawable/rb_video_drawable_selector"
        android:text="本地视频" />

    <RadioButton
        android:id="@+id/audioRadioBtn"
        style="@style/BottomRadioButton"
        android:drawableTop="@drawable/rb_audio_drawable_selector"
        android:text="本地音乐" />

    <RadioButton
        android:id="@+id/netVideoRadioBtn"
        style="@style/BottomRadioButton"
        android:drawableTop="@drawable/rb_net_video_drawable_selector"
        android:text="网络视频" />

    <RadioButton
        android:id="@+id/netAudioRadioBtn"
        style="@style/BottomRadioButton"
        android:drawableTop="@drawable/rb_net_audio_drawable_selector"
        android:text="网络音乐" />
</RadioGroup>